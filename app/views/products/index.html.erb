<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Kreiert von</th>
      <th>Name</th>
      <th>Beschreibung</th>
      <th>Image url</th>
      <th>Preis</th>
      <th>Aktion</th>
      <th>Groesse</th>
      <th>Lieferzeit und Verstandkosten</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.hersteller %></td>
        <td><%= product.name %></td>
        <td><%= product.beschreibung %></td>
        <td><%= product.image_url %></td>
        <td><%= product.preis %></td>
        <td><%= product.aktion %></td>
        <td><%= product.groesse %></td>
        <td><%= product.lieferzeit_versandkosten %></td>    

        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

